<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea'
            });
        </script>
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <%- include ../layout/head %>

        <title>Edit</title>
    </head>
    <body>
        <%- include ../layout/nav %>
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-heading">Edit post</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <% if (data && data.error){ %>
                            <div id="login-alert" class="alert alert-danger col-sm-12">
                                <%= data.error %>
                            </div>
                            <% } %>
                            <form class="edit-form" role="form">
                                <input class="id" type="hidden" name="id"
                                       value="<% if (data && data.post){ %> <%= data.post.id %> <% } %>">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input type="text" name="title" class="form-control title" placeholder="Title"
                                           value="<% if (data && data.post){ %> <%= data.post.title %> <% } %>">
                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <textarea  class="form-control content" name="content" id="content-editor" cols="30" rows="10">
                                        <% if (data && data.post){ %>
                                        <%= data.post.content %>
                                        <% } %>
                                    </textarea>
                                </div>
                                <div class="form-group">
                                    <label>Author</label>
                                    <input type="text" name="author" class="form-control author" placeholder="Author"
                                           value="<% if (data && data.post){ %> <%= data.post.author %> <% } %>">
                                </div>
                                <input type="submit" class="btn btn-info post-edit-btn" value="Post">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="/static/js/edit.js"></script>
</html>